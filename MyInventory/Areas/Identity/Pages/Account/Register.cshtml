@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<head>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/register.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            Admin Register
        </div>

        <!-- Login Form -->
        <form id="account" method="post">
            <input asp-for="Input.FN" type="text" class="fadeIn second" placeholder="FirstName">
            <input asp-for="Input.LN" type="text" class="fadeIn second" placeholder="LastName">
            <input asp-for="Input.Email" type="text" class="fadeIn second" placeholder="Email">
            <input type="password" asp-for="Input.Password" class="fadeIn third" placeholder="password"/>
            <input type="password" asp-for="Input.ConfirmPassword" class="fadeIn third" placeholder="password"/>
            <input type="submit" class="fadeIn fourth" value="Register">
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" href="/Identity/Account/Login">Existing user? Sign In?</a>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
