@using Microsoft.AspNetCore.Identity
@using LifeLine.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var currentUser = await UserManager.GetUserAsync(User);
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Suppliers" asp-action="Index">Suppliers</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="ProductListings" asp-action="Index">Product Listing</a>
        </li>
    </ul>

    <ul class="navbar-nav">
        <li class="nav-item">
            <a id="manage" class="nav-link" asp-area="Identity" 
                asp-page="/Account/Manage/Index" title="Manage">
                Hello @(currentUser.FirstName) @(currentUser.LastName)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" 
                asp-page="/Account/Logout" 
                asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Aboutus">About Us</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ContactForm">Contact Form</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Store" asp-action="StoreView">View Products</a>
        </li>
    </ul>
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" id="register" asp-area="Identity" 
                asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="login" asp-area="Identity" 
                asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}