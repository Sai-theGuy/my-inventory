@model LifeLine.Models.Contact
@{
    ViewData["Title"] = "Contact Us";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap4.css" />
    <link rel="stylesheet" href="~/css/contactform.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LifeLine</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="visually-hidden">(current)</span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    <form asp-action="Contact" method="post">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">
                @ViewBag.Message

            </div>
        }
        <div class="contact">
            <div class="container py-5">
                <div class="row">
                    <div class="col-lg-6 mx-auto">
                        <div class="card">
                            <div class="card-body">
                                <div clas="row">
                                    <div class="col-lg-12">
                                        <div class="head text-center py-3">
                                            <h3 style="color:white">Contact Us</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="form py-3">
                                    <div class="form-row my-5">
                                        <div class="col-lg-6">
                                            <input type="text" class="effect-1" placeholder="Full Name"
                                                   asp-for="FullName">
                                            <span asp-validation-for="FullName" class="text-danger"></span>
                                            <span class="Focus-border"></span>
                                        </div>
                                    </div>
                                    <div class="form-row pb-4">
                                        <div class="col-lg-12">
                                            <input type="text" class="effect-1" placeholder="Email"
                                                   asp-for="Email">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                            <span class="Focus-border"></span>
                                        </div>
                                    </div>
                                    <div class="form-row pt-3">
                                        <div class="col-lg-12">
                                            <input type="text" class="effect-1" placeholder="Your message"
                                                   asp-for="Message">
                                            <span asp-validation-for="Message" class="text-danger"></span>
                                            <span class="Focus-border"></span>
                                        </div>
                                    </div>
                                    <div class="form-row pt-5">
                                        <div class="offsetcol-lg-6">
                                            <p> <input type="checkbox">  I'm not a robot</p>
                                        </div>
                                        <div class="offset-2 col-lg-4">
                                            <button class="btn1">Send Message</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
   
    <footer class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="card-body">
            <h6 style="color:white;"><strong>&copy; 2022 Lifeline Medical Center.</strong></h6>
        </div>
    </footer>
</body>
</html>