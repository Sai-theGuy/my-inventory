@model LifeLine.Models.PurchaseOrders

@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap4.css" />
    <link rel="stylesheet" href="~/css/receipt.css" />
</head>
<body>
    <div id="invoice">

        <center id="top">
            <div class="logo"></div>
            <div class="info">
                <h1>Payment Complete</h1>
            </div>
        </center>
        <div id="mid">
            <div class="info">
                <p>
                    Thank you! Your transaction has been sucessful.
                </p>
            </div>
        </div>

        <div id="bot">


            <div id="table">
                <table>
                    <tr class="output">
                        <td class="totalprice"><h2>Total Price:</h2></td>
                        <td class="tableitem"><h3 class="priceoutput"> @Html.DisplayFor(model => model.Price) </h3></td>
                    </tr>
                    <tr class="output">
                        <td class="totalprice"><h2> @Html.DisplayNameFor(model => model.OrderID) </h2></td>
                        <td class="tableitem"><h3 class="idoutput">@Html.DisplayFor(model => model.OrderID)</h3> </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <div style="width:100%; padding-left:15%; padding-right:15%; padding-top:10%; padding-bottom:10%;">
                                <a asp-action="Index" asp-controller="Home" class="btn btn1">Back to Homepage</a>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</body>
